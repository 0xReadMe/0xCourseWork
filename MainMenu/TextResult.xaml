<Page x:Class="MainMenu.TextResult"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MainMenu"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TextResult">

    <Grid Margin="310 0 0 0" Background="#FF36393F">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="55"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox Background="#FF36393F" Foreground="White" x:Name="Result" Grid.Row="0"></TextBox>

        <Grid  Background="#FF29292B" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button x:Name="PrintResult" Click="PrintResult_Click" Style="{StaticResource ButtonStyleText}" Grid.Column="0">Вывести данные</Button>
            <Button x:Name="SaveResult" Click="SaveResult_Click" Style="{StaticResource ButtonStyleText}" Grid.Column="1">Сохранить</Button>
        </Grid>
    </Grid>
</Page>
